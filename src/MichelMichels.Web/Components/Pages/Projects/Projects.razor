@page "/projects"

<PageTitle>Projects | michel.miche.ls</PageTitle>

<div class="container p-4">
    <div class="vstack gap-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Projects</li>
            </ol>
        </nav>

        <h2>Projects</h2>

        <div class="row g-3">
            @foreach(var card in Cards)
            {
                <div class="col-12 col-md-6">
                    <div class="card w-100 h-100">
                        <div class="card-img-top text-center p-1">
                            <span style="font-size:5rem;">@card.Emoji</span>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@card.Title</h5>
                            <p class="card-text">@card.Description</p>
                            <a href="@card.Link" class="btn btn-primary stretched-link mt-auto me-auto">See project</a>
                        </div>
                    </div>
                </div>
            }            
        </div>
    </div>
</div>